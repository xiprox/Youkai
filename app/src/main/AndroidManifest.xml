<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.youkai">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.feature.login.LoginActivity"
            android:theme="@style/AppTheme.Login" />

        <activity
            android:name=".ui.feature.media.MediaActivity"
            android:theme="@style/AppTheme.Media" />

        <activity
            android:name=".ui.feature.media.characters.CharactersActivity"
            android:label="@string/title_characters" />
    </application>

</manifest>